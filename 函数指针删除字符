#include <stdio.h>
#include <string.h>
#define N 100
void  Squeeze(char *s, char c);
int main()
{
    char  str[20], ch;
    printf("Input a string:");
    gets(str);
    printf("Input a character:");
    ch = getchar();
    Squeeze(str,ch);
    printf("Results:%s\n", str);
    return 0;
}
void  Squeeze(char *s, char c)
{
    char str[20];
    char *t=str;
    strcpy(t,s);
    for(;*t!='\0';t++)
    {
        if(*t!=c)
        {
            *s=*t;
            s++;
        }
    }
    *s='\0';
}
 
 
void  Squeeze(char *s, char c)
{
   int i,j,n;
   n=strlen(s);
   for(i=0;i<n;i++)
   {
       if(s[i]==c)
       {
           for(j=i;j<n;j++)
           {
               s[j]=s[j+1];
           }
       }
   }
}
